{
  "name": "saif-firebase-plugin",
  "displayName": "saif-firebase-plugin",
  "description": "a pluging to connect your folder to forebase",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
     "viewsContainers": {
      "activitybar": [
        {
          "id": "firebase-sidebar",
          "title": "Firebase",
          "icon": "media/plugin.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "saif-firebase-plugin.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "extension.login",
        "title": "Sign in with Google"
      },
      {
        "command": "extension.saveProject",
        "title": "Save Current Project"
      },
      {
        "command": "extension.listProjects",
        "title": "List Projects"
      }
    ],
    
    "views": {
      "firebase-sidebar": [
        {
          "id": "firebaseSidebar",
          "name": "Firebase",
          "type": "tree"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "firebase": "^11.1.0",
    "firebase-admin": "^13.0.2"
  }
}
